<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="2dp"
    android:background="@color/myC_blackBg">

    <ImageView
        android:id="@+id/item_mThumbnail"
        android:focusable="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_mName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:gravity="center"
        android:ellipsize="end"
        android:lines="2"
        android:focusable="false"
        android:text=""
        android:textSize="14sp"
        android:textColor="@color/myC_whiteText"
        android:textStyle="bold"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center">
        <ImageView
            android:id="@+id/mStar"
            android:focusable="false"
            android:layout_width="12sp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star_24"/>
        <TextView
            android:id="@+id/item_mRating"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mStar"
            android:layout_centerVertical="true"
            android:autoSizeTextType="uniform"
            android:lines="1"
            android:ellipsize="end"
            android:text="- -"
            android:textColor="@color/myC_highlightText"/>

        <ImageView
            android:id="@+id/mFav"
            android:focusable="false"
            android:layout_width="12sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2sp"
            android:layout_toRightOf="@+id/item_mRating"
            android:src="@drawable/ic_favorite_24"/>
        <TextView
            android:id="@+id/item_mFavCount"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mFav"
            android:layout_centerVertical="true"
            android:autoSizeTextType="uniform"
            android:lines="1"
            android:ellipsize="end"
            android:text="0"
            android:textColor="@color/myC_highlightText"/>

        <ImageView
            android:id="@+id/mComment"
            android:focusable="false"
            android:layout_width="12sp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2sp"
            android:layout_toRightOf="@+id/item_mFavCount"
            android:src="@drawable/ic_comments_24"/>
        <TextView
            android:id="@+id/item_mCommentCount"
            android:focusable="false"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/mComment"
            android:layout_centerVertical="true"
            android:autoSizeTextType="uniform"
            android:lines="1"
            android:ellipsize="end"
            android:text="0"
            android:textColor="@color/myC_highlightText"/>
    </RelativeLayout>

</LinearLayout>
